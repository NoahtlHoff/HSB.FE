@*
    Displays the user registration form.
*@
@model HackStreeBoys_Website.Models.RegisterViewModel
@{
    ViewData["Title"] = "Create your TradeScope profile";
    var statusMessage = ViewData["FormStatusMessage"] as string;
    var statusLevel = (ViewData["FormStatusLevel"] as string) ?? "info";
}

<section class="auth-stage">
    <div class="auth-shell">
        <div class="auth-card">
            <div class="auth-card__intro">
                <span class="eyebrow">Create account</span>
                <h1>Register for TradeScope AI</h1>
                <p class="lede">
                    Tell us who you are in just a few fields and we’ll tailor the copilot experience around your trading style.
                </p>
            </div>

            <div class="auth-secondary-action">
                <a asp-controller="Account" asp-action="Login" class="btn ghost auth-secondary-btn">Back to login</a>
            </div>

            @if (!string.IsNullOrWhiteSpace(statusMessage))
            {
                <div class="form-status form-status-@statusLevel">
                    <span>@statusMessage</span>
                </div>
            }

            <form asp-action="Register" method="post" class="auth-form" novalidate data-live-validate>
                <div asp-validation-summary="ModelOnly" class="form-summary"></div>

                <div class="form-group">
                    <div class="group-heading">
                        <label asp-for="Name"></label>
                        <span class="field-status" data-field-status data-state="idle">
                            <span class="dot"></span>
                            <span class="status-text"></span>
                        </span>
                    </div>
                    <input asp-for="Name" class="text-input" placeholder="e.g. Alex Rivera" data-field-input autocomplete="name" />
                    <span asp-validation-for="Name" class="field-error"></span>
                </div>

                <div class="form-group">
                    <div class="group-heading">
                        <label asp-for="Email"></label>
                        <span class="field-status" data-field-status data-state="idle">
                            <span class="dot"></span>
                            <span class="status-text"></span>
                        </span>
                    </div>
                    <input asp-for="Email"
                           type="email"
                           class="text-input"
                           placeholder="you@@email.com"
                           data-field-input
                           autocomplete="username"
                           pattern="^[^@@\s]+@@[^@@\s]+\.[A-Za-z]{2,}$"
                           title="Enter a valid email address including a top-level domain (e.g. user@@example.com)"
                           data-val="true"
                           data-val-regex="Enter a valid email address including a top-level domain (e.g. user@@example.com)"
                           data-val-regex-pattern="^[^@@\s]+@@[^@@\s]+\.[A-Za-z]{2,}$" />
                    <span asp-validation-for="Email" class="field-error"></span>
                    <p class="field-hint">We’ll send trade summaries and alerts to this inbox.</p>
                    <span asp-validation-for="Email" class="field-error"></span>
                </div>

                <div class="form-group">
                    <div class="group-heading">
                        <label asp-for="Password"></label>
                        <span class="field-status" data-field-status data-state="idle">
                            <span class="dot"></span>
                            <span class="status-text"></span>
                        </span>
                    </div>
                    <input asp-for="Password" class="text-input" placeholder="Choose a strong password" data-field-input required minlength="8" maxlength="64" autocomplete="new-password" pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9])(?=.*[^a-zA-Z0-9]).{8,64}$" title="Use 8-64 characters with upper, lower, number, and symbol." />
                    <ul class="password-rules">
                        <li>8-64 characters</li>
                        <li>Uppercase and lowercase letters</li>
                        <li>At least one number and symbol</li>
                    </ul>
                    <span asp-validation-for="Password" class="field-error"></span>
                </div>

                <button type="submit" class="btn primary auth-btn">Create my account</button>
            </form>
        </div>

        <aside class="auth-panel">
            <h2>You're seconds away from an AI-boosted playbook.</h2>
            <ul class="auth-panel__list">
                <li>Personalized strategy prompts tuned to your profile.</li>
                <li>Live market context, risk rails, and trade journaling.</li>
                <li>Session summaries delivered to your inbox anytime.</li>
            </ul>
        </aside>
    </div>
</section>

@section Scripts
{
    @* Validation scripts removed *@
}
